generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique 
  email     String   @unique
  image     String
  phone     String   @unique
  country   String
  state     String
  city      String
  password  String
  active    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
